<% if current_user %>
  <% if current_user.language != 'fa' &&  current_user.language != 'default' %>
    <div class="container">
  <% else %>
    <div class="container text-right">
  <% end %>
      <div class="row pt-7">
        <div class="col col-6 offset-4">
          <div class="card">
            <% if current_user.language != 'fa' &&  current_user.language != 'default' %>
              <div class="card-header background">
            <% else %>
              <div class="card-header background rtl">
            <% end %>      
                <h4 class="mt-2"><%= t("support.title") %></h4>
              </div>
              <% if current_user.language != 'fa' &&  current_user.language != 'default' %>
                <div class="card-body background">
              <% else %>
                <div class="card-body background rtl">
              <% end %> 
                <%= form_for(:support_email, url: support_email_path) do |f| %>

                <%= f.label t("support.role"), class: "form-label" %>
                <%= f.select :role, options_for_select([t("support.professor"), t("support.teacher_assistant"), t("support.academic_staff"), t("support.staff"), t("support.student")]),{} ,{class: "form-control"} %>
                  <br>
                  <%= f.label t("support.field"), class: "form-label" %>
                  <%= f.text_field :field, class: "form-control" ,:required => true%>
                  <br>
                  <%= f.label t("support.reason"), class: "form-label" %>
                  <%= f.text_area :desc, class: "form-control", :required => true %>
                  <br>
                  <%= hidden_field_tag 'email', current_user.email  %>

                  <br>
                  <%= f.submit t("forgot_password.submit"), class: "btn btn-primary" %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
<% else %>
  <div class="container">
    <div class="row pt-7">
      <div class="col col-4 offset-4">
        <h4> برای ثبت درخواست وارد شوید و یا یک حساب جدید ایجاد کنید </h4>
      </div>
    </div>
  </div>
<% end %>   
